<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        app:layout_constraintRight_toLeftOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sun_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:id="@+id/sun_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/time"
        app:layout_constraintTop_toBottomOf="@+id/sun_info"
        app:layout_constraintLeft_toLeftOf="@id/sun_info"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintLeft_toRightOf="@+id/sun_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/sun_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/time"
        android:paddingRight="10dp"
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
